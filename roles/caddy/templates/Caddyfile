freshrss.{{ domain_name }} {
   reverse_proxy freshrss:80
}

grafana.{{ domain_name }} {
  route /auth* {
    authp {
      backends {
        google_oauth2_backend {
          method oauth2
          realm google
          provider google
          client_id "{{ google_client_id }}"
          client_secret "{{ google_secret }}"
          scopes openid email profile
        }
      }

      transform user {
        match origin google
        match email {{ manoj_email }}
        action add role authp/admin
        ui link "Grafana" "/d/OC7GD_7nz/home?orgId=1" icon "las la-chart-pie"
      }
      transform user {
        match origin google
        match email {{ monica_email }}
        action add role authp/admin
        ui link "Grafana" "/d/OC7GD_7nz/home?orgId=1" icon "las la-chart-pie"
      }
    }
  }

  route {
    authorize {
      primary yes
      allow roles authp/admin
    }
    reverse_proxy grafana:3000
  }
}